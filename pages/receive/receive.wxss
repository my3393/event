/* pages/receve/receive.wxss */
.infor{
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 4rpx dotted #f2f2f2;
  line-height: 100rpx;
  position: relative;
}
.inform{
  display: inline-block;
  vertical-align: middle;
  margin-right: 20rpx;
}
.inforin{
  display: inline-block;
  vertical-align: middle;
}
.inforin input{
  width: 560rpx;
  letter-spacing: 2rpx;
}
.forin{
  margin-left: 30rpx;
}
.enter{
  position: absolute;
  right: 20rpx;
   width: 14rpx;
  height: 26rpx;
  top: 0rpx;
}
.enter image{
  width: 14rpx;
  height: 26rpx;
}
.pick{
  display: inline-block;
  color: #666;
  width: 540rpx;
}

.submit{
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  border-radius: 40rpx;
  height: 80rpx;
  background: #F861AA;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin-top: 40rpx;
}
.yds{
  width: 100%;
   height: 100%;
   position: fixed;
   top: 0;
   left: 0;
   background: rgba(0, 0, 0, 0.4);
   z-index: 12;
}
.yd{
 position:absolute;
 width: 500rpx;
 background: #fff;
 border-radius: 12rpx;
 text-align: center;
 font-size: 28rpx;
 padding-top: 40rpx;
 top: 40%;
 left: 50%;
 padding: 20rpx 20rpx;
 box-sizing: content-box;
 transform: translate(-50%,-50%)
}
.lip{
 margin: 20rpx 0;
 color: #A3A3A3;
}
.baodc{
width:100%;
text-align:center;
margin-top:30rpx;
color: #F861AA;
}
.xioe{
 margin-top: 50rpx;
 line-height: 70rpx;
 display: flex;
 justify-content: space-around;
 color: #F861AA;
}

/* 地区选择 */
.picker{
  float: right;
}
.inpu{
 width: 500rpx;
 border: 0;
 height: 80rpx;
 background: #fff;
 text-align: right;
 margin-top: -10rpx;
}
.xia{
  float: right;
  width: 36rpx;
  margin-right: 20rpx;
  height: 16rpx;
}
.xia image{
  width: 100%;
  height: 100%;
}
.mwrap{
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
}
.mtitle{

	height: 80rpx;
	line-height: 80rpx;
	background-color: #e6e6e6 !important;
	width: 100%;
	font-size: 30rpx;
	color: #333;
	text-align: center;
}
.province{
	background-color: white;
	width: 100%;
	height: 520rpx;
	overflow: scroll;
	-webkit-overflow-scrolling: touch;
}
.province view{
	line-height: 80rpx;
	padding-left: 40rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #DDDDDD;
	font-size: 28rpx;
	color: #333;
}
.province_active{
	background-color: #FE5BA9;
	color: white !important;
}
.next{
