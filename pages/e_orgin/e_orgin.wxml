<view>
  <view class='infor'>
    <view class='inform'>机构名称</view>
    <view class='inforin'> <input type='text' placeholder='请输入机构名字' bindinput='names'></input> </view>
  </view>
  <view class='infor'>
    <view class='inform'>联系方式</view>
    <view class='inforin'> <input maxlength='11' type='number' placeholder='请输入联系方式'bindinput='scope'></input>  </view>
  </view>
   <view class='infor'>
    <view class='inform'>机构所在省</view>
    <view class='inforin'>
         <picker bindchange='getprov' class='pick' value="{{province[poindex].id}}" data-selecthx="{{province[poindex].name}}" range="{{province}}" range-key="{{'name'}}">
      <view class="picker">
        {{province[poindex].name}}
      </view>
    </picker>
     </view>
    <view class='enter'> <image src='../../images/enter.png'></image> </view>
  </view>
  <view class='infor' hidden='{{iscity}}'>
    <view class='inform'>机构所在市</view>
    <view class='inforin'>
         <picker bindchange='getcity' class='pick' value="{{city[cindex].id}}" data-selecthx="{{city[cindex].name}}" range="{{city}}" range-key="{{'name'}}">
      <view class="picker">
        {{city[cindex].name}}
      </view>
    </picker>
     </view>
    <view class='enter'> <image src='../../images/enter.png'></image> </view>
  </view>
   <view class='infor' hidden='{{isqu}}'>
    <view class='inform'>机构所在区</view>
    <view class='inforin'>
        <picker bindchange='getarea' class='pick' value="{{area[aindex].id}}" data-selecthx="{{area[aindex].name}}" range="{{area}}" range-key="{{'name'}}">
      <view class="picker">
        {{area[aindex].name}}
      </view>
    </picker>
     </view>
    <view class='enter'> <image src='../../images/enter.png'></image> </view>
  </view>
    <view class='infor'hidden='{{isjie}}'>
      <view class='inform'>机构所在街</view>
      <view class='inforin'>
          <picker bindchange='gettown' class='pick' value="{{town[tindex].id}}" data-selecthx="{{town[tindex].name}}" range="{{town}}" range-key="{{'name'}}">
          <view class="picker">
            {{town[tindex].name}}
          </view>
        </picker>
      </view>
      <view class='enter'> <image src='../../images/enter.png'></image> </view>
    </view>
    <view class='jgtx pho'>
      <view class='jgtu'>营业执照</view>
      <view class='photo'>
        <image src='{{posters}}' bindtap="chooseImages" ></image>
      </view>
    </view>
<view class="group">
  <view style="margin-left:20rpx;">参选节目</view>
  <view class="group-nav" wx:for='{{detail}}' wx:for:index = '{{index}}'>
    <view class="nav-l" bindtap="xuan" data-index="{{index}}">
      <view class="leib"> {{item.index >= 0 ? item.category : "选择类别"}}</view>
      <view class="xia">
        <image src="../../images/xia.png"></image>
      </view>
    </view>
    <view class="v-input">
      <input class="v-inpu"  value="{{item.name}}" placeholder="填写名称" data-index="{{index}}" bindinput="input"></input>
    </view>
  </view>
