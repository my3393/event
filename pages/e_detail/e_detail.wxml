<!--pages/e_detail/e_detail.wxml-->
 <view wx:if='{{detail.isLive == 1}}'>
  <live-player id='player' class='banner' bindtap='bindfull' src="{{detail.tomliveUrl}}"   mode="RTC" autoplay='flase' bindstatechange="statechange" binderror="error"  />
 
 <view>
  
  </view>
 </view>
  
<view wx:else>
  <swiper class="banner" indicator-dots="true" autoplay="true" duration="1000" indicator-color="#a7a7a7" indicator-active-color="#fe5ba9">
    <block wx:for='{{photos}}'>
      <swiper-item id="{{item.ids}}" bindtap="enters" class='swiper'>
        <image class="banner_img" src="{{item}}"></image>
      </swiper-item>
    </block>

  </swiper>

</view>
<view>
   
</view>
<view class='nav clearfix'>
 
  <view>
      <text class='sai-num'>{{detail.seasonName}}</text> <text class='sai-n'>#{{detail.typeName}}#</text>
     {{detail.competitionTitle}}
